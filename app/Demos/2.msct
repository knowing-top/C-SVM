{  
   /*error:two ID's 'a' has same action scope*/

   /*function:calculation factorial*/	
   /*describe:
     1.input number;
     2.Caculate sum=1!+2!+...+n! 
     3 write sum;		
   */
    int number;
    int a;
    int a;/*this 'a' is some as the 'a' above*/
    int sum=0;
    int temp=1;
    read number;
    for(a=1;a<=number;a=a+1)
    {
     temp=temp*a;
     sum=sum+temp;
    }
    write sum;
}



